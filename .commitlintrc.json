{
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "body-max-line-length": [2, "always", 72],
    "body-min-length": [2, "always", 20],
    "header-max-length": [2, "always", 50],
    "scope-case": [2, "always", ["lower-case", "pascal-case"]],
    "scope-enum": [2, "always", ["components", "utils", "Button", "TextField", "Typography"]],
    "subject-case": [2, "always", ["lower-case", "pascal-case"]],
    "type-enum": [
      2,
      "always",
      ["build", "ci", "chore", "docs", "feat", "fix", "improvement", "perf", "refactor", "revert", "style", "test"]
    ]
  }
}
